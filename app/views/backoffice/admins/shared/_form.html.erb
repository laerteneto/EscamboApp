
<h1 class="page-header">Administradores</h1>

    <%if @admin.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
           <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <ul>
              <%= @admin.errors.full_messages do |message|%>
                <li> <%= message %> </li>
              <% end -%>
          </ul>
        </div>
     <% end -%>


<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="col-lg-6">
                <%= form_for([:backoffice, @admin]) do  |f|%>

                    <div class="form-group">
                        <label>Nome</label>
                        <%=f.text_field :name, class:"form-control", placeholder:"Email do Administrador" %>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <%=f.text_field :email, class:"form-control", placeholder:"Email do Administrador" %>
                    </div>

                    <% if policy(@admin).edit? %>
                        <div class="form-group">
                            <label>Role</label>
                            <%=f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
                                <div class="radio">
                                    <%= b.label { b.radio_button + b.text } %>
                                </div>
                            <% end -%>
                        </div>
                    <% end -%>

                    <div class="form-group">
                        <label>Senha</label>
                        <%=f.password_field :password, class:"form-control", placeholder:"Senha do Administrador" %>
                    </div>

                    <div class="form-group">
                        <label>Confirmação da Senha</label>
                        <%=f.password_field :password_confirmation, class:"form-control", placeholder:"Senha novamente" %>
                    </div>

                    <button type="submit" class="btn btn-default">Salvar</button>

                <% end -%>

            </div>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
