$(function(){
	let $sendMailModal = $('#sendMailModal');

	// Setting email and name on Form
	$('#recipient-text').val('<%= @admin.email %>');
	$('h4.modal-title').text('Enviar mensagem para: <%= @admin.name %>');

	// Show modal
	$sendMailModal.modal();

	// Set focus on 'Message Text' after modal is shown
	$sendMailModal.on('shown.bs.modal', function () {
  		$('#subject-text').focus();
	})

});
